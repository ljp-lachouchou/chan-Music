<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="25dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"

        android:paddingRight="25dp"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/baseline_person_add_alt_24"
            android:id="@+id/avatar_img"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/dialog_background"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:gravity="center"
            android:text="头像"
            android:textColor="@color/flesh"
            android:textSize="32sp"
            />
        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/login_edit_text"
            android:hint="用户名"
            android:paddingLeft="10dp"
            android:textColorHint="@color/light_grey" />
        <EditText
            android:id="@+id/nike_name_ed"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/login_edit_text"
            android:hint="昵称"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/light_grey" />

        <EditText
            android:id="@+id/register_pwd_ed"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_edit_text"
            android:hint="请输入密码"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:textColorHint="@color/light_grey" />

        <EditText
            android:id="@+id/confirm_pwd_ed"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/login_edit_text"
            android:hint="请再次确认密码"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:textColorHint="@color/light_grey" />

        <Button
            android:id="@+id/register_confirm"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/dialog_background"
            android:text="确定"
            android:layout_marginTop="50dp"
            android:textColor="@color/flesh"
            android:textSize="24sp"
            />

        <Button
            android:id="@+id/register_cancel"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/dialog_background"
            android:text="取消"
            android:layout_marginTop="50dp"
            android:textColor="@color/flesh"
            android:textSize="24sp" />
    </LinearLayout>
</ScrollView>
